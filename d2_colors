#!/bin/bash
# Color variables
red='\033[0;31m'
green='\033[0;32m'
yellow='\033[0;33m'
blue='\033[0;34m'
magenta='\033[0;35m'
cyan='\033[0;36m'
ltgray='\033[0;37m'
gray='\033[0;90m'
ltred='\033[0;91m'
ltgreen='\033[0;92m'
ltyellow='\033[0;93m'
ltblue='\033[0;94m'
ltmagenta='\033[0;95m'
ltcyan='\033[0;96m'
white='\033[0;97m'

# Clear the color after that
clear='\033[0m'
# Examples
echo -e "The color is: ${red}red${clear}!"
echo -e "The color is: ${green}green${clear}!"
echo -e "The color is: ${yellow}yellow${clear}!"
echo -e "The color is: ${blue}blue${clear}!"
echo -e "The color is: ${magenta}magenta${clear}!"
echo -e "The color is: ${cyan}cyan${clear}!"
echo -e "The color is: ${ltgray}light gray${clear}!"
echo -e "The color is: ${gray}gray${clear}!"
echo -e "The color is: ${ltred}light red${clear}!"
echo -e "The color is: ${ltgreen}light green${clear}!"
echo -e "The color is: ${ltyellow}light yellow${clear}!"
echo -e "The color is: ${ltblue}light blue${clear}!"
echo -e "The color is: ${ltmagenta}light magenta${clear}!"
echo -e "The color is: ${ltcyan}light cyan${clear}!"
echo -e "The color is: ${white}white${clear}!"
